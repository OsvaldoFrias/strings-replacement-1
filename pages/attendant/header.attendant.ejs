<% if (role==='attendant' ) { %>
<script>

  function saveCoupon() {
    const coupon = prompt('<%= translation.ATTENDANT_HEADER.LABEL_1 %>');

    if (coupon) {
      if (confirm('<%= translation.ATTENDANT_HEADER.LABEL_2 %>')) {
        registerCoupon(coupon);
      } else {
        // console.log('no se guardó');
      }
    }
  }

  function registerCoupon(coupon) {
    const myHeaders = new Headers();
    myHeaders.append('Content-Type', 'application/json');

    fetch(`/api/v1/profile/coupon`, {
      headers: myHeaders,
      credentials: "same-origin",
      method: 'post',
      body: JSON.stringify({
        coupon
      })
    })
      .then(async (res) => {
        if (res.status === 201) {
          alert('<%= translation.ATTENDANT_HEADER.LABEL_3 %>');
        } else if (res.status === 404) {
          alert('<%= translation.ATTENDANT_HEADER.LABEL_4 %>');
        } else if (res.status === 400) {
          const body = await res.json();
          if (body) {
            alert(body.message);
          } else {
            alert('<%= translation.ATTENDANT_HEADER.LABEL_5 %>');
          }
        } else if (res.status === 408) {
          const body = await res.json();
          if (body && body.message === 'token expired') {
            alert('<%= translation.ATTENDANT_HEADER.LABEL_6 %>');
          } else {
            alert('<%= translation.ATTENDANT_HEADER.LABEL_5 %>');
          }
        } else {
          alert('<%= translation.ATTENDANT_HEADER.LABEL_5 %>');
        }
        location.reload(true);
      })
      .catch(err => {
        console.error(err);
      });

  }
</script>
<% } %>
<% } %>