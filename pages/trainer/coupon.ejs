<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../partials/head'); %>

  <!-- Data table -->
  <link rel="stylesheet" type="text/css"
    href="/public/css/jquery.dataTables.css">
  <script type="text/javascript" charset="utf8"
    src="/public/js/jquery.dataTables.js">
    </script>
  <!--/ Data table -->
  <script type="text/javascript" charset="utf8"
    src="/public/js/custom.date.js"></script>
  <link rel="stylesheet" type="text/css" href="/public/css/home.css">
</head>

<body onload="getBasicInfo()">
  <%- include("../../partials/topnav.ejs", { "location": "coupons" }) %>
  <%- include("./header.trainer.ejs") %>
  <div>
    <section>
      <div>
        <div class="d-flex align-items-center justify-content-center">
          <div class="w-100">
            <h2>
              <%= translation.COUPON.GENERATED_COUPONS %>
            </h2>
            <div id="availableAppointments">
              <table id="availableAppointments-list">
                <thead>
                  <tr>
                    <th>
                      <%= translation.COUPON.INVOICE_NUMBER %>
                    </th>
                    <th>
                      <%= translation.COUPON.CONSECUTIVE %>
                    </th>
                    <th><%= translation.PROFILE.THEAD_1 %></th>
                    <th><%= translation.COUPON.USER %></th>
                    <th><%= translation.PROFILE.THEAD_2 %></th>
                    <th><%= translation.CERTIFICATES.THEAD_5 %></th>
                    <th><%= translation.COUPON.RSM %></th>
                    <th><%= translation.COUPON.TYPE %></th>
                  </tr>
                </thead>
              </table>
            </div>
          </div>
        </div>
        <div>
          <%- include("../../partials/footer.ejs") %>
        </div>
      </div>
    </section>
  </div>
</body>
<script>
  const availableAppointments = document.getElementById('availableAppointments');

  function getBasicInfo() {
    const myHeaders = new Headers();
    myHeaders.append('Content-Type', 'application/json');

    fetch('/api/v1/coupons', {
      headers: myHeaders,
      credentials: "same-origin"
    })
      .then(res => res.json())
      .then(res => parseCoupons(res))
      .catch(err => {
        console.error(err);
      });
  }

  function parseCoupons(res) {
    let availableAppointmentsTable = $('#availableAppointments-list').DataTable({
      "ordering": false,
      "pageLength": 20,
      "sDom": 'lrtip',
      "dom": '<"top"if>rt<"bottom"p><"clear">'
    });
    res.forEach(coupon => {
      const couponId = coupon.id;
      const poCode = coupon.poCode;
      const sequence = coupon.sequence;
      const couponCode = coupon.coupon;
      const serviceName = coupon.service.name;
      const type = coupon.type;
      const rsmName = coupon.rsmName;
      const businessName = coupon.businessName;

      let attendantMail = null;
      if (coupon.attendant) {
        const email = coupon.attendant.user.email;
        const id = coupon.attendant.id;
        attendantMail = `<a href="/attendant/${id}">${email}</a>`;
      }

      availableAppointmentsTable
        .row
        .add([
          `${poCode}`,
          `${sequence}`,
          `${serviceName}`,
          `${attendantMail ? attendantMail : '<span style="font-style: italic;color: #999999;"><%= translation.COUPON.LABEL_1 %></span>'}`,
          `<img style="cursor:pointer;" onclick="prompt('<%= translation.PROFILE.COPY_COUPON %>','${couponCode}')" src="/public/img/copy-icon.png" alt="<%= translation.PROFILE.COPY %>" width="30px"/>${couponCode}`,
          `${businessName}`,
          `${rsmName}`,
          `${type}`,
        ])
        .draw()
        .node();
    });
  }
</script>

</html>